# Backend Dockerfile for FastAPI service (TradingAgents-CN v1.0.3)
# 前后端分离架构 - 后端服务
# 支持多架构: amd64, arm64

# 使用 Debian Bookworm (稳定版) 而不是 Trixie (测试版)
FROM python:3.10-slim-bookworm

# 获取构建架构信息
ARG TARGETARCH

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    TZ=Asia/Shanghai

WORKDIR /app

# 配置国内 apt 源（阿里云 Debian 镜像）
RUN sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list.d/debian.sources && \
    sed -i 's/security.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list.d/debian.sources && \
    echo "Debian apt 源已切换为阿里云镜像"

# 创建必需的目录并安装系统依赖
# - curl: 健康检查
# - pandoc: 从 GitHub 下载最新版本（避免 Debian 仓库问题）
# - wkhtmltopdf: 从官方下载（用于 PDF 生成）
# - 中文字体: 用于 PDF 中文显示
RUN mkdir -p /app/logs /app/data /app/config && \
    # 配置 apt 重试和超时
    echo 'Acquire::Retries "3";' > /etc/apt/apt.conf.d/80-retries && \
    echo 'Acquire::http::Timeout "30";' >> /etc/apt/apt.conf.d/80-retries && \
    echo 'Acquire::https::Timeout "30";' >> /etc/apt/apt.conf.d/80-retries && \
    # 更新软件源
    apt-get update && \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        fontconfig \
        fonts-noto-cjk \
        wget \
        xvfb && \
    # 根据架构设置变量
    if [ "$TARGETARCH" = "arm64" ]; then \
        PANDOC_ARCH="arm64"; \
        WKHTMLTOPDF_ARCH="arm64"; \
    else \
        PANDOC_ARCH="amd64"; \
        WKHTMLTOPDF_ARCH="amd64"; \
    fi && \
    # 下载并安装 pandoc
    wget -q https://github.com/jgm/pandoc/releases/download/3.8.2.1/pandoc-3.8.2.1-1-${PANDOC_ARCH}.deb && \
    dpkg -i pandoc-3.8.2.1-1-${PANDOC_ARCH}.deb && \
    rm pandoc-3.8.2.1-1-${PANDOC_ARCH}.deb && \
    # 下载并安装 wkhtmltopdf
    wget -q https://github.com/wkhtmltopdf/packaging/releases/download/0.12.6.1-3/wkhtmltox_0.12.6.1-3.bookworm_${WKHTMLTOPDF_ARCH}.deb && \
    apt-get install -y --no-install-recommends \
        ./wkhtmltox_0.12.6.1-3.bookworm_${WKHTMLTOPDF_ARCH}.deb && \
    rm wkhtmltox_0.12.6.1-3.bookworm_${WKHTMLTOPDF_ARCH}.deb && \
    # 更新字体缓存
    fc-cache -fv && \
    rm -rf /var/lib/apt/lists/*

# 复制pyproject.toml和README.md（pip安装需要）
COPY pyproject.toml README.md ./

# 安装 Python 依赖
# 优化说明：
# 1. 使用清华镜像加速下载
# 2. 优先使用预编译的二进制wheel包（--prefer-binary）
# 3. 避免从源码编译，大幅提升ARM架构构建速度
# 4. 安装 PDF 导出工具: pdfkit
RUN pip install --upgrade pip -i https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip install --prefer-binary . -i https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip install --prefer-binary pdfkit -i https://pypi.tuna.tsinghua.edu.cn/simple

# ========================================
# Rust 性能优化模块编译
# ========================================
# 配置 Rust/Cargo 国内源（使用中国科技大学 sparse 镜像）
RUN mkdir -p /root/.cargo && \
    echo '[source.crates-io]' > /root/.cargo/config && \
    echo 'replace-with = "ustc"' >> /root/.cargo/config && \
    echo '' >> /root/.cargo/config && \
    echo '[source.ustc]' >> /root/.cargo/config && \
    echo 'registry = "sparse+https://mirrors.ustc.edu.cn/crates.io-index/"' >> /root/.cargo/config && \
    echo '' >> /root/.cargo/config && \
    echo '[net]' >> /root/.cargo/config && \
    echo 'git-fetch-with-cli = true' >> /root/.cargo/config && \
    echo "Rust/Cargo crates.io 源已切换为中科大 sparse 镜像"

# 安装构建工具和 Rust 工具链
RUN echo "==> 开始安装构建工具..." && \
    apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        pkg-config \
        curl \
        ca-certificates && \
    echo "==> 构建工具安装完成" && \
    echo "==> 开始安装 Rust 工具链..." && \
    # 使用官方 rustup（更稳定，下载更快）
    curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --no-modify-path && \
    export PATH="$HOME/.cargo/bin:$PATH" && \
    echo "==> Rust 工具链安装完成" && \
    rustc --version && \
    cargo --version && \
    echo "==> 开始安装 maturin..." && \
    pip install maturin -i https://pypi.tuna.tsinghua.edu.cn/simple && \
    maturin --version && \
    echo "==> 所有 Rust 工具安装完成" && \
    rm -rf /var/lib/apt/lists/*

# 复制 Rust 模块源代码
COPY rust_modules ./rust_modules

# 复制 Cargo 配置文件（使用项目中的国内镜像配置）
COPY rust_modules/.cargo/config.toml /root/.cargo/config.d/rust-modules.toml

# 编译 Rust 模块 (使用 maturin，Release 模式优化性能)
# maturin 会自动处理 Python 扩展模块的文件名格式
# 注意：使用 --compatibility linux 指定兼容性，避免 manylinux 版本不匹配
RUN export PATH="$HOME/.cargo/bin:$PATH" && \
    # 编译并安装词云模块
    cd rust_modules/wordcloud && \
    maturin build --release --strip --compatibility linux --interpreter python && \
    pip install target/wheels/tacn_wordcloud*.whl && \
    # 编译并安装技术指标模块
    cd ../indicators && \
    maturin build --release --strip --compatibility linux --interpreter python && \
    pip install target/wheels/tacn_indicators*.whl && \
    # 编译并安装股票代码模块
    cd ../stockcode && \
    maturin build --release --strip --compatibility linux --interpreter python && \
    pip install target/wheels/tacn_stockcode*.whl && \
    # 编译并安装财务计算模块 (v1.0.4 新增)
    cd ../financial && \
    maturin build --release --strip --compatibility linux --interpreter python && \
    pip install target/wheels/tacn_financial*.whl && \
    echo "Rust modules compiled and installed successfully" && \
    # 验证安装
    python -c "import tacn_wordcloud, tacn_indicators, tacn_stockcode, tacn_financial; print('✅ All Rust modules loaded successfully')" || \
    echo "⚠️ Warning: Some Rust modules may not be installed correctly" && \
    # 清理编译缓存以减小镜像体积
    cd /app && \
    rm -rf rust_modules/*/target && \
    # 移除 Rust 工具链 (可选，减小镜像体积)
    rm -rf $HOME/.cargo $HOME/.rustup

# ========================================
# TypeScript 服务层 (Phase 4-01: v2.0 架构)
# ========================================
# 安装 Node.js (TypeScript 运行时)
RUN echo "==> 安装 Node.js..." && \
    curl -fsSL https://deb.nodesource.com/setup_lts.x | bash - && \
    apt-get install -y nodejs && \
    node --version && \
    npm --version && \
    rm -rf /var/lib/apt/lists/* && \
    echo "Node.js 安装完成"

# 复制 ts_services 源代码
COPY ts_services ./ts_services

# 安装 TypeScript 依赖并构建
WORKDIR /app/ts_services
RUN npm install && \
    npm run build && \
    echo "TypeScript 服务构建完成" && \
    # 验证构建
    node -e "require('reflect-metadata'); const ts = require('./build/index.js'); console.log('TS Services OK:', Object.keys(ts).length);" || \
    echo "警告: TypeScript 服务验证失败"

WORKDIR /app

# ========================================
# 复制后端代码和必需模块
# ========================================
COPY app ./app
COPY tradingagents ./tradingagents
COPY chanlun ./chanlun
COPY config ./config
COPY scripts ./scripts
COPY docs ./docs
COPY install ./install
# 复制版本文件
COPY VERSION VERSION

# 复制Docker环境配置文件
COPY .env.docker ./.env

# 暴露后端端口（与docker-compose.v1.0.0.yml一致）
EXPOSE 8000

# Docker环境标识
ENV DOCKER_CONTAINER=true

# 启动FastAPI服务
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]